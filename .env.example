# 以太坊RPC节点URL
RPC_URL=

# 私钥（用于签名交易）
PRIVATE_KEY=

# 合约地址
CONTRACT_ADDRESS=

# 链ID (1=主网, 5=Goerli, 11155111=Sepolia)
CHAIN_ID=

# Gas限制
GAS_LIMIT=21000

# Gas价格 (可选，留空使用网络建议价格)
GAS_PRICE=100

# 日志级别
RUST_LOG=info


# 针对不同网络的建议配置:

# BSC (Binance Smart Chain)
# CHAIN_ID=56
# GAS_PRICE=5000000000  # 5 Gwei

# Polygon
# CHAIN_ID=137
# GAS_PRICE=30000000000  # 30 Gwei

# Ethereum Goerli Testnet
# CHAIN_ID=5
# GAS_PRICE=20000000000  # 20 Gwei